#!/usr/bin/env fish

set -q argv[1]; or set argv[1] $PWD

set files (find $argv[1] -type f \( -iname '*.flac' -o -iname '*.m4a' -o -iname '*.mp3' \))

if test (count $files) -gt 0
    echo "üéµ Processing multi-disc album: $argv[1]"
    loudgain --album --noclip --tagmode=e $files
else
    echo "‚è≠  No supported audio files found in: $argv[1]"
end
