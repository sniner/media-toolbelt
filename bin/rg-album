#!/usr/bin/fish

set -q argv[1]; or set argv[1] $PWD

set files (fd -e flac -e mp3 -e m4a -t f . $argv[1])
if test (count $files) -gt 0
    echo "🎵 Processing multi-disc album: $argv[1]"
    loudgain --album --noclip --tagmode=e $files
else
    echo "⏭  No supported audio files found in: $argv[1]"
end

